<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/name_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/image_lista"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/marca_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:layout_alignLeft="@+id/name_lista"
        android:layout_below="@+id/name_lista"
        android:textSize="16sp"
        android:text="Marca" />

    <ImageView
        android:id="@+id/image_lista"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/wrench2_flat"
        android:transitionName="shared_image" />


    <TextView
        android:id="@+id/modelo_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marca_lista"
        android:paddingTop="0dp"
        android:layout_toRightOf="@+id/image_lista"
        android:layout_alignLeft="@+id/name_lista"
        android:text="Modelo"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/year_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelo_lista"
        android:paddingTop="0dp"
        android:layout_toRightOf="@+id/image_lista"
        android:layout_alignLeft="@+id/name_lista"
        android:text="Year"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/precio_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_lista"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:textSize="20dp"
        android:text="Precio"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorAccent" />


    <RatingBar
        android:id="@+id/rating_lista"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:transformPivotX="0dp"
        android:transformPivotY="23dp"
        android:isIndicator="true"
        android:progressTint="#FDDB39"
        android:rating="4"
        android:secondaryProgressTint="#FDDB39"
        android:layout_alignBottom="@+id/image_lista"
        android:layout_alignLeft="@+id/year_lista"
        android:layout_alignStart="@+id/year_lista" />

</RelativeLayout>